
@{
    ViewBag.Title = "Import Cards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Globalization
<!-- Main content -->
<div class="content" style="min-height:750px;">

   

    @if (ViewBag.Message == "1")
    {
        <br />
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-lg-8" style="color:red;">File Uploaded with erros, Please Check error Logs -> <a class="text-bold" href="@Url.Action("DownloadReport","Admin", new { fileName = "Cards_Error_Log.xlsx"})">Download</a></div>
        </div>
        <br />
    }
    else if (ViewBag.Message != "")
    {
        <br />
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-lg-8" style="color:@ViewBag.Color">@ViewBag.Message</div>
        </div>
        <br />
    }

    <!-- Simple form -->
    <form action="@Url.Action("PostUploadCardExcel", "Admin")" class="login-form" method="post" enctype="multipart/form-data">
        <div class="col-md-2"></div>
        <div class="panel panel-body col-lg-8">

            <div class="text-center">
                <div class="icon-object text-blue"><i class="icon-file-excel text-success"></i></div>
                <h5 class="content-group">Import Cards</h5>
            </div>


            @*<div class="form-group">
                    <label class="text-bold">Rows <span class="text-danger">*</span></label>
                    <input type="number" step="1" min="2" max="10000" class="form-control" required name="rowCount" placeholder="Enter Number of Rows in Excel File">
                </div>*@

            <div class="form-group">
                <label class="text-bold">Upload File <span class="text-danger">*</span></label>
                <input type="file" id="file" class="form-control" required name="cardFile">
                <span class="text-danger">only .xlsx files allowed</span>
            </div>



            <div class="form-group pull-right">
                <button type="submit" id="submit" class="btn bg-blue-800 ">Upload<i class="glyphicon glyphicon-upload position-right"></i></button>
                <button type="button" id="loading" class="btn bg-slate-400 " style="display:none"><i class="icon-spinner spinner"></i></button>
            </div>

        </div>
    </form>
    <!-- /simple form -->
</div>

<script>

    $("#submit").click(function ()
    {
        if ($('#file').get(0).files.length === 0) {
            
        }
        else {
            $("#submit").hide();
            $("#loading").show();
        }

    });
</script>
